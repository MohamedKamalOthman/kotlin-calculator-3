<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:padding="10dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/actionButton"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:ellipsize="start"
        android:gravity="right"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="90sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAC"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"

                android:background="@drawable/special_button"
                android:text="AC"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvplusminus"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/special_button"
                android:text="+/-"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvPercent"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/special_button"

                android:text="%"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDiv"
                style="@style/NumberActionButton2"
                android:layout_margin="13dp"
                android:background="@drawable/operation_button"

                android:text="รท" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeven"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="7" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="8" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="9" />

            <TextView
                android:id="@+id/tvMul"
                style="@style/NumberActionButton2"
                android:layout_margin="13dp"
                android:background="@drawable/operation_button"

                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFour"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="4" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="5" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="6" />

            <TextView
                android:id="@+id/tvMinus"
                style="@style/NumberActionButton2"
                android:layout_margin="13dp"
                android:background="@drawable/operation_button"

                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOne"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="1" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="2" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="3" />

            <TextView
                android:id="@+id/tvPlus"
                style="@style/NumberActionButton2"
                android:layout_margin="13dp"
                android:background="@drawable/operation_button"

                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:layout_width="107dp"
                android:layout_margin="13dp"
                android:background="@drawable/zero_button"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="0" />

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/round_button"
                android:text="." />

            <TextView
                android:id="@+id/tvEquals"
                style="@style/EqualButtonStyle"
                android:layout_margin="13dp"
                android:background="@drawable/operation_button"

                android:text="=" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>